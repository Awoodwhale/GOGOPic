<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="1dp"
    android:background="#fafafafa"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_comics_comment_header"
        android:layout_gravity="center_vertical"
        android:layout_margin="6dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/no_header"/>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/tv_comics_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:id="@+id/tv_comics_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="end" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_comics_comment_level"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/iv_comics_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>